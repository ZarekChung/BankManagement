@model IEnumerable<BankManagement.Models.CustomerDataCount>
@{
    ViewBag.Title = "CountCustomerInfo";
}

<h2>CountCustomerInfo</h2>

<table class="table" id="customer">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.客戶名稱)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.聯絡人數量)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.銀行帳戶數量)
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.客戶名稱)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.聯絡人數量)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.銀行帳戶數量)
                </td>

            </tr>
        }
    </tbody>
</table>
@section scripts
{
    <script>
        $(document).ready(function() {
            $('#customer').DataTable({
                "paging":   false,
                "info":     false
            });
        });
    </script>

}